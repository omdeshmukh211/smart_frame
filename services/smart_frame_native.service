[Unit]
Description=Smart Frame - Native PyQt5 Kiosk
After=graphical.target

[Service]
Type=simple
User=pi
Environment=DISPLAY=:0
Environment=XAUTHORITY=/home/pi/.Xauthority
WorkingDirectory=/home/pi/smart_frame
ExecStart=/usr/bin/python3 /home/pi/smart_frame/main.py
Restart=always
RestartSec=5

[Install]
WantedBy=graphical.target
